@page "/villas"
@using VillaMon_API.Models.Dto
@inject HttpClient Http


<h3>Villa Management</h3>

<!-- Villa Form -->
<EditForm Model="@newVilla" OnValidSubmit="@CreateVilla">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="newVilla.Name" placeholder="Name" />
    <InputTextArea @bind-Value="newVilla.Details" placeholder="Details" />
    <InputNumber @bind-Value="newVilla.Rate" placeholder="Rate" />
    <InputNumber @bind-Value="newVilla.Sqft" placeholder="Square Feet" />
    <InputNumber @bind-Value="newVilla.Occupancy" placeholder="Occupancy" />
    <InputText @bind-Value="newVilla.ImageUrl" placeholder="Image URL" />
    <InputText @bind-Value="newVilla.Amenity" placeholder="Amenity" />
    <InputText @bind-Value="newVilla.Location" placeholder="Location" />
    <InputCheckbox @bind-Value="newVilla.IsAvailable" />

    <button type="submit">Add Villa</button>
</EditForm>

<!-- Villa List -->
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Rate</th>
            <th>Occupancy</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var villa in villas)
        {
            <tr>
                <td>@villa.Id</td>
                <td>@villa.Name</td>
                <td>@villa.Rate</td>
                <td>@villa.Occupancy</td>
                <td>@villa.Location</td>
                <td>
                    <button @onclick="() => DeleteVilla(villa.Id)" class="btn btn-danger">Delete</button>

                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<VillaDTO> villas = new();
    private VillaDTO newVilla = new VillaDTO();

    protected override async Task OnInitializedAsync()
    {
        await LoadVillas();
    }

    private async Task LoadVillas()
    {
        villas = await Http.GetFromJsonAsync<List<VillaDTO>>("VillaAPI");
    }

    private async Task CreateVilla()
    {
        var response = await Http.PostAsJsonAsync("VillaAPI", newVilla);

        if (response.IsSuccessStatusCode)
        {
            // Clear the form only after successful creation
            newVilla = new VillaDTO();
            await LoadVillas(); // Reload the list to include the new villa
        }
        else
        {
            Console.WriteLine("Failed to add villa");
        }
    }

    private async Task EditVilla(VillaDTO villa)
    {
        // Logic to edit villa (could open a modal or redirect to another page)
    }

    private async Task DeleteVilla(int id)
    {
        string value = $"Villa with ID {id} is going to be deleted.";
        Console.WriteLine(value);
        // Attempt to delete the villa
        var response = await Http.DeleteAsync($"VillaAPI/{id}");

        // Check if the deletion was successful
        if (response.IsSuccessStatusCode)
        {
            // Remove the villa from the list to update the UI
            var villaToRemove = villas.FirstOrDefault(v => v.Id == id);
            if (villaToRemove != null)
            {
                villas.Remove(villaToRemove);
            }

            // Log success message
            Console.WriteLine($"Villa with ID {id} was deleted successfully.");
        }
        else
        {
            // Log error message if deletion failed
            Console.WriteLine($"Failed to delete villa with ID {id}. Status Code: {response.StatusCode}");
        }

        // Force the UI to refresh
        StateHasChanged();
    }

}